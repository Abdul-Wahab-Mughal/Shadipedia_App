<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spapp.shadipedia.User.UserChatList">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="MY Chats"
        android:textColor="@color/app"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/UChatRecyclarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_home"/>

    <TextView
        android:id="@+id/uchatempty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/app"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/UChatRecyclarView"
        android:textSize="32sp"/>

</RelativeLayout>