<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spapp.shadipedia.User.User_Edit_Profile">

    <TextView
        android:id="@+id/text_change"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:paddingStart="25sp"
        android:text="Edit Profile"
        android:textColor="@color/app"
        android:textSize="32sp"
        android:textStyle="bold"
        tools:ignore="RtlSymmetry" />

    <LinearLayout
        android:id="@+id/EP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_change"
        android:layout_marginHorizontal="30sp"
        android:background="@drawable/backfromlogin"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="10sp">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:elevation="5dp"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editchangename"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Name :"
                android:textCursorDrawable="@color/black"
                android:inputType="textPersonName"
                android:lines="1"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5sp"
            android:background="@color/gray"
            android:paddingVertical="10sp"
            tools:ignore="SmallSp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:elevation="5dp"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editchangeage"
                android:layout_width="match_parent"
                android:textCursorDrawable="@color/black"
                android:layout_height="60dp"
                android:hint="Age :"
                android:inputType="textPersonName"
                android:lines="1"
                android:textColor="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5sp"
            android:background="@color/gray"
            android:paddingVertical="10dp"
            tools:ignore="SmallSp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:elevation="5dp"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editchangemobile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textCursorDrawable="@color/black"
                android:hint="Mobile :"
                android:inputType="textPersonName"
                android:lines="1"
                android:textColor="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EP"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/Submitepro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit" />

    </LinearLayout>

</RelativeLayout>
